{
    "name": "Lazybug",
    "version": "3.0",
    "description": "Free and open-source way to learning Chinese through TV and movies",
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "*://cdn.lazybug.ai/*",
        "http://localhost/*"
    ],
    "permissions": [
        "storage"
    ],
    "action": {
        "default_title": "Toggle",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "64": "images/64.png",
        "128": "images/128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://*.youtu.be/*",
                "*://*.bilibili.com/*",
                "*://*.bilibili.cn/*",
                "file:///*/*.mp4",
                "file:///*/*.webp",
                "file:///*/*.webm"
            ],
            "run_at": "document_end",
            "css": [
                "lazybugcaption_quasar.css",
                "google.css",
                "ExtensionCaption.css"
             ],
            "js": [
                "vars_ext.js",
                "vue.runtime.global.prod.min.js",
                "vuex.global.js",
                "quasar.umd.prod.js",
                "shared.js",
                "store.js",
                "devtools.js",
                "mixins.js",
                "ExtensionCaption.umd.js",
                "ext.js"
            ]
        },
        {
            "matches": [
                "https://www.deepl.com/translator*"
            ],
            "run_at": "document_end",
            "js": [
                "vars_ext.js",
                "deepl_ext.js"
            ]
        }
    ],
    "manifest_version": 3
}
